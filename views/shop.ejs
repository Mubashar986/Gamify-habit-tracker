<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habitica Market</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <style>
        /* General Styles */
        :root {
            --primary-purple: #4f2a93;
            --light-bg: #e1e0e3;
            --border-color: #c3c0c7;
            --card-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--light-bg);
            margin: 0;
            padding: 0;
        }

        /* Market Section */
        .market-container {
            max-width: 1200px;
            margin: 20px auto;
            display: grid;
            grid-template-columns: 250px 1fr;
            gap: 2rem;
        }

        /* Sidebar */
        .sidebar {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: var(--card-shadow);
        }

        .search-box {
            width: 100%;
            padding: 10px;
            margin-bottom: 1rem;
            border: 1px solid var(--border-color);
            border-radius: 4px;
        }

        .filters h3 {
            font-size: 1.2rem;
            margin-bottom: 1rem;
            color: var(--primary-purple);
        }

        .filter-option {
            margin-bottom: 10px;
        }

        .filter-option input {
            margin-right: 8px;
        }

        /* Items Grid */
        .items-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .item-card {
            background: white;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            box-shadow: var(--card-shadow);
        }

        .item-card img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
        }

        .item-card h4 {
            font-size: 1rem;
            color: var(--primary-purple);
            margin-bottom: 5px;
        }

        .item-card .cost {
            font-weight: bold;
            margin: 10px 0;
        }

        button {
            background-color: var(--primary-purple);
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:disabled {
            background: #ccc;
        }
    </style>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <main class="market-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <input type="text" class="search-box" id="searchBox" placeholder="Search for items">
            <div class="filters">
                <h3>Categories</h3>
                <div class="filter-option">
                    <input type="checkbox" id="filter-potions" value="potions"> 
                    <label for="filter-potions">Potions</label>
                </div>
                <div class="filter-option">
                    <input type="checkbox" id="filter-avatars" value="avatars"> 
                    <label for="filter-avatars">Avatars</label>
                </div>
            </div>
        </aside>

        <!-- Items Section -->
        <section class="items-section">
            <div class="items-grid" id="itemsGrid">
                <!-- Potions -->
                <% purchasedPotions.forEach(potion => { %>
                <div class="item-card potion">
                    <img src="/<%= potion.imageURL %>" alt="<%= potion.name %>">
                    <h4><%= potion.name %></h4>
                    <p><%= potion.description %></p>
                    <div class="cost"><%= potion.cost %> ðŸª™</div>
                    <button disabled>Already Bought</button>
                </div>
                <% }); %>

                <% notPurchasedPotions.forEach(potion => { %>
                <div class="item-card potion">
                    <img src="/<%= potion.imageURL %>" alt="<%= potion.name %>">
                    <h4><%= potion.name %></h4>
                    <p><%= potion.description %></p>
                    <div class="cost"><%= potion.cost %> ðŸª™</div>
                    <form action="/shop/buy-potion/<%= potion._id %>" method="POST">
                        <% if (user.coins < potion.cost) { %>
                        <button type="submit" disabled>Not enough coins</button>
                        <% } else { %>
                        <button type="submit">Buy</button>
                        <% } %>
                    </form>
                </div>
                <% }); %>

                <!-- Avatars -->
                <% avatars.forEach(avatar => { %>
                <div class="item-card avatar">
                    <img src="/<%= avatar.imageURL %>" alt="<%= avatar.name %>">
                    <h4><%= avatar.name %></h4>
                    <p><%= avatar.description %></p>
                    <div class="cost"><%= avatar.cost %> ðŸª™</div>
                    <form action="/shop/buy-avatar/<%= avatar._id %>" method="POST">
                        <% if (user.coins < avatar.cost || String(user.avatar.avatarId) === String(avatar._id)) { %>
                        <button type="submit" disabled>
                            <%= String(user.avatar.avatarId) === String(avatar._id) ? "Already Bought" : "Not enough coins" %>
                        </button>
                        <% } else { %>
                        <button type="submit">Buy</button>
                        <% } %>
                    </form>
                </div>
                <% }); %>
            </div>
        </section>
    </main>

    <script>
        document.querySelectorAll('.filter-option input').forEach(checkbox => {
            checkbox.addEventListener('change', () => {
                const selectedFilters = Array.from(document.querySelectorAll('.filter-option input:checked'))
                    .map(checkbox => checkbox.value);
                document.querySelectorAll('.item-card').forEach(card => {
                    card.style.display = selectedFilters.length === 0 || selectedFilters.some(filter => card.classList.contains(filter))
                        ? 'block'
                        : 'none';
                });
            });
        });
    </script>
</body>
</html>
