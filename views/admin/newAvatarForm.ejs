
<form action="" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="titleInput">Name</label>
        <input name="name" type="text" class="form-control" id="titleInput" aria-describedby="titleHelp" placeholder="Enter Title" />
        <small id="titleHelp" class="form-text text-muted">Avatar Title</small>
    </div>
    
    <div class="form-group">
        <label for="descriptionInput">Description</label>
        <textarea name="description" class="form-control" id="descriptionInput" aria-describedby="descriptionHelp" placeholder="Enter Description"></textarea>
        <small id="descriptionHelp" class="form-text text-muted">Avatar Details</small>
    </div>
    
    <div class="form-group">
        <label for="priceInput">Cost</label>
        <input name="cost" type="text" class="form-control" id="priceInput" aria-describedby="priceHelp" placeholder="Enter Price">
        <small id="priceHelp" class="form-text text-muted">Avatar Price</small>
    </div>
    
    <div class="form-group">
        <label for="pictureInput">Image</label>
        <input name="file" type="file" class="form-control" id="pictureInput" aria-describedby="pictureHelp" />
        <small id="pictureHelp" class="form-text text-muted">Upload Avatar Picture</small>
    </div>
    
    <div class="form-group">
        <button class="btn btn-info" type="submit">Create New Avatar</button>
    </div>
</form>